<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Testing\Domain\Entity\Test\Test" table="testing_test">
        <id name="id" type="string" length="26">
            <generator strategy="NONE"/>
        </id>

        <embedded name="creator"
                  class="App\Shared\Domain\Entity\ValueObject\GlobalUserId"
                  column-prefix="creator_"
        />

        <field name="name" type="string" unique="true"/>
        <field name="description" type="string"/>
        <field name="correctAnswersPercentage" type="integer">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="published" type="boolean"/>
        <field name="skillId" type="string" length="26" nullable="true"/>
        <field name="difficultyLevel"
               type="string"
               enum-type="App\Testing\Domain\Entity\Test\DifficultyLevel"
        />
        <field name="createdAt" type="datetime_immutable"/>
        <field name="updatedAt" type="datetime_immutable" nullable="true"/>
        <field name="deletedAt" type="datetime_immutable" nullable="true"/>

        <one-to-many field="questions" target-entity="App\Testing\Domain\Entity\Test\Question" mapped-by="test">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>